@model WebBanDienThoai.Models.SANPHAM

@{
    ViewBag.Title = "Thêm sản phẩm";
    Layout = "~/Views/Shared/_LayoutPage_Admin.cshtml";
}

<style>
    .container_Products {
        max-width: 1640px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow: auto; /* Ẩn cuộn ngang */
        position: relative;
    }

    .title2 {
        color: #337ab7;
        padding-bottom: 12px;
        font-size: 20px;
    }
</style>

<h3 class="title2"><a href="@Url.Action("Admin_Product", "Admin", new {MaLoaiSP = 1})" style="text-decoration: none;">Sản phẩm</a> / <a href="#" style="text-decoration: none;">Thêm sản phẩm</a></h3>
<div class="container_Products">
    <div class="container">
        @using (Html.BeginForm("CreatePhoneProducts", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            <h2 style="display: flex; justify-content: center;"><strong>Sản phẩm mới</strong></h2>
            <div class="form-group">
                <label for="MaNCC">Nhà cung cấp</label>
                @Html.DropDownList("MaNCC", null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="MaNSX">Nhà sản xuất</label>
                @Html.DropDownList("MaNSX", null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="MaLoaiSP">Loại sản phẩm</label>
                @Html.DropDownList("MaLoaiSP", null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="TenSp">Tên sản phẩm</label>
                @Html.TextBoxFor(row => row.TenSP, new { @class = "form-control", placeholder = "Tên sản phẩm ..." })
            </div>

            <div class="form-group">
                <label for="NgayCapNhat">Ngày cập nhật</label>
                @Html.TextBoxFor(row => row.NgayCapNhat, new { @class = "form-control", type = "date" })
            </div>

            <div class="form-group">
                <label for="MoTa">Mô tả</label>
                @Html.TextAreaFor(row => row.MoTa, new { @class = "form-control", placeholder = "Mô tả sản phẩm ..." })
            </div>

            <div class="form-group">
                <label for="HinhAnh">Hình ảnh 1</label>
                <input type="file" class="form-control-file" id="HinhAnh" name="HinhAnh">
                <span style="color: red;">@ViewBag.Upload</span>
            </div>

            <div class="form-group">
                <label for="HinhAnh">Hình ảnh 2</label>
                <input type="file" class="form-control-file" id="HinhAnh" name="HinhAnh2">
                <span style="color: red;">@ViewBag.Upload</span>
            </div>

            <div class="form-group">
                <label for="HinhAnh">Hình ảnh 3</label>
                <input type="file" class="form-control-file" id="HinhAnh" name="HinhAnh3">
                <span style="color: red;">@ViewBag.Upload</span>
            </div>

            <div class="form-group">
                <label for="Moi">Tình trạng</label>
                <select class="form-control" id="Moi" name="Moi">
                    <option value="0">Mới</option>
                    <option value="1">Cũ</option>
                </select>
            </div>

            <div class="form-group">
                <label for="Moi">Chọn trạng thái</label>
                <select class="form-control" id="DaXoa" name="DaXoa">
                    <option value="0">Chưa xóa</option>
                    <option value="1">Đã Xóa</option>
                </select>
            </div>

            <div class="form-group">
                <a href="@Url.Action("Admin_Product", "Admin", new {MaLoaiSP=1})" class="btn btn-danger">Trở lại</a>
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        }
    </div>
</div>
<script>
    $(document).ready(function () {
        $("form").submit(function (event) {
            var maNCC = $("#MaNCC").val();
            var maNSX = $("#MaNSX").val();
            var maLoaiSP = $("#MaLoaiSP").val();
            var tenSP = $("#TenSP").val();
            var ngayCapNhat = $("#NgayCapNhat").val();
            var moTa = $("#MoTa").val();
            var hinhAnh1 = $("#HinhAnh").val();
            var hinhAnh2 = $("#HinhAnh2").val();
            var hinhAnh3 = $("#HinhAnh3").val();

            if (
                maNCC === "" || maNSX === "" || maLoaiSP === "" || tenSP === "" ||
                ngayCapNhat === "" || moTa === "" || hinhAnh1 === "" || hinhAnh2 === "" || hinhAnh3 === ""
            ) {
                alert("Vui lòng điền đầy đủ thông tin.");
                event.preventDefault(); // Ngăn chặn việc gửi biểu mẫu nếu có trường để trống
            }
        });
    });
</script>
