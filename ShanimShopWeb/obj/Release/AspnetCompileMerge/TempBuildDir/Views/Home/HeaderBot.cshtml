@using WebBanDienThoai.Models;
@model THANHVIEN

<style>
    .btn-search:active:focus {
        outline: none ;
        border-color: transparent ;
    }
</style>

<!-- header-bot-->
<div class="header-bot">
    <div class="header-bot_inner_wthreeinfo_header_mid">
        <!-- header-bot-->
        <div class="col-md-4 logo_agile">
            <h1>
                <a href="@Url.Action("Index", "Home")">
                    <img style="width: 400px" src="@Url.Content("~/Content/Images/Logo/logo.jpg")" />
                </a>
            </h1>
        </div>
        <!-- header-bot -->
        <div class="col-md-8 header">
            <!-- header lists -->
            <ul>
                <li>
                    <a id="store-location-link" class="play-icon popup-with-zoom-anim" href="https://maps.app.goo.gl/EHaokUaRLgho8irp9" target="_blank">
                        <span class="fa fa-map-marker" aria-hidden="true"></span> Vị trí cửa hàng
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("OrderStatus", "Cart")">
                        <span class="fa fa-truck" aria-hidden="true"></span>Đơn hàng
                    </a>
                </li>
                <li>
                    <span class="fa fa-phone" aria-hidden="true"></span> 0936 000 306
                </li>
                @if (Session["member"] != null && Session["member"].ToString() != "")
                {
                    THANHVIEN member = Session["member"] as THANHVIEN;
                    <li>
                        <a href="@Url.Action("ViewInformation", "Member")">
                            <span class="fa fa-user" aria-hidden="true"></span> @member.HoTen
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Logout", "Login")">
                            <span class="fa fa-sign-out" aria-hidden="true"></span> Đăng xuất
                        </a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="@Url.Action("Login", "Login")">
                            <span class="fa fa-unlock-alt" aria-hidden="true"></span> Đăng nhập
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Register", "Register")">
                            <span class="fa fa-pencil-square-o" aria-hidden="true"></span> Đăng ký
                        </a>
                    </li>
                }
            </ul>
            <!-- search -->
            <div class="agileits_search">
                <form action="#" method="post">
                    <input name="Search" type="search" placeholder="Tôi có thể giúp gì cho bạn?" required="">
                    <button type="submit" class="btn btn-default btn-search" aria-label="Left Align">
                        <span class="fa fa-search" aria-hidden="true"> </span>
                    </button>
                </form>
            </div>
            @Html.Action("Cart", "Cart")
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>