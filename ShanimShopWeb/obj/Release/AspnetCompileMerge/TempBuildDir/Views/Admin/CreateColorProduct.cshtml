@using WebBanDienThoai.Models;
@model SANPHAM
@{
    ViewBag.Title = "Thêm màu";
    Layout = "~/Views/Shared/_LayoutPage_Admin.cshtml";
}

<style>
    .container_Products {
        max-width: 1640px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow-x: auto; /* Ẩn cuộn ngang */
        position: relative;
    }

    .title2 {
        color: #337ab7;
        padding-bottom: 12px;
        font-size: 20px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
    }

    .container {
        text-align: left;
    }

    .card-img-top {
        width: 520px;
        height: 350px;
    }

    .card-title {
        margin: 20px 0;
        font-size: 24px;
    }
</style>

<h3 class="title2"><a href="@Url.Action("Admin_Product", "Admin", new {MaLoaiSP=ViewBag.CategoryID})" style="text-decoration: none;">Sản phẩm</a> / <a href="#">Thêm màu</a></h3>

@using (Html.BeginForm("CreateColorProduct", "Admin", FormMethod.Post))
{
    <div class="container_Products">
        @*Header*@
        <h3 class="text-center"><strong>@ViewBag.TenSP</strong></h3>
        <hr />
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <img src="@Url.Content("~/Content/Images/Products/" + ViewBag.GetImages.HinhAnh)" alt="@ViewBag.GetImages.HinhAnh" class="card-img-top img-fluid ">
                        <div class="card-body">
                            <h2 class="card-title  text-center">@ViewBag.GetImages.HinhAnh</h2>
                            <label class="mb10">Vui lòng chọn màu</label>
                            @{IEnumerable<MAU> listColor = ViewBag.ListColor as IEnumerable<MAU>;}
                            <select class="form-control" name="MaMau" id="color">
                                @foreach (var item in listColor)
                                {
                                    <option value="@item.MaMau">@item.TenMau</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card">
                        <img src="@Url.Content("~/Content/Images/Products/"+ ViewBag.GetImages.HinhAnh2)" alt="@ViewBag.GetImages.HinhAnh2" class="card-img-top img-fluid">
                        <div class="card-body ">
                            <h2 class="card-title text-center">@ViewBag.GetImages.HinhAnh2</h2>
                            <label class="mb10">Vui lòng chọn màu</label>
                            <select class="form-control" name="MaMau" id="color">
                                @foreach (var item in listColor)
                                {
                                    <option value="@item.MaMau">@item.TenMau</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <input type="submit" value="lưu" class="btn btn-primary" style="margin-left: 14px;" id="btnLuuMau" />
        </div>
    </div>
}
