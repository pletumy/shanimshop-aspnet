@using WebBanDienThoai.Models;
@model CHITIETSANPHAM

@{
    ViewBag.Title = "Thêm chi tiết sản phẩm";
    Layout = "~/Views/Shared/_LayoutPage_Admin.cshtml";
}
<style>
    .container_Products {
        max-width: 1640px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        overflow: auto; /* Ẩn cuộn ngang */
        position: relative;
    }

    .title2 {
        color: #337ab7;
        padding-bottom: 12px;
        font-size: 20px;
    }
</style>

<h3 class="title2"><a href="@Url.Action("Admin_Product", "Admin", new { MaLoaiSP = ViewBag.CategoryID })" style="text-decoration: none;">Sản phẩm</a> / <a href="#" style="text-decoration: none;">Thêm chi tiết</a></h3>

@if (Model != null)
{
    <div class="container_Products">
        <div>
            <h3 style="display: flex; justify-content: center;"><strong>Sản phẩm @ViewBag.ProductsName đã có thông tin chi tiết</strong></h3>
            <div style="display: flex; justify-content: center;">
                <a href="@Url.Action("Admin_Product", "Admin", new { MaLoaiSP = ViewBag.CategoryID })" class="btn btn-danger" style="margin-top: 12px">
                    Trở lại
                </a>
            </div>
        </div>
    </div>
}
else
{
    <div class="container_Products">
        <div class="container">
            <h2 style="display: flex; justify-content: center;"><strong>@ViewBag.ProductsName</strong></h2>
            @using (Html.BeginForm("CreatePhoneProductDetails", "Admin", FormMethod.Post, new { id = "myForm" }))
            {
                <div class="form-group">
                    <label for="MaSP">Mã sản phẩm</label>
                    <input type="text" id="MaSP" name="MaSP" class="form-control" value="@ViewBag.ProductsID">
                </div>
                <div class="form-group">
                    <label for="KICHTHUOCMANHINH">Kích thước màn hình</label>
                    @Html.TextBoxFor(row => row.KICHTHUOCMANHINH, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="CONGNGHEMANHINH">Công nghệ màn hình</label>
                    @Html.TextBoxFor(row => row.CONGNGHEMANHINH, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="DOPHANGIAI">Độ phân giải</label>
                    @Html.TextBoxFor(row => row.DOPHANGIAI, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="TINHNANGMANGHINH">Tính năng màn hình</label>
                    @Html.TextBoxFor(row => row.TINHNANGMANGHINH, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="TANSOQUET">Tần số quét</label>
                    @Html.TextBoxFor(row => row.TANSOQUET, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="CAMERASAU">Camera sau</label>
                    @Html.TextBoxFor(row => row.CAMERASAU, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="QUAYPHIM">Quay phim</label>
                    @Html.TextBoxFor(row => row.QUAYPHIM, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="CAMERATRUOC">Camera trước</label>
                    @Html.TextBoxFor(row => row.CAMERATRUOC, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="TINHNANGCAMERA">Tính năng camera</label>
                    @Html.TextAreaFor(row => row.TINHNANGCAMERA, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="HEDIEUHANH">Hệ điều hành</label>
                    @Html.TextBoxFor(row => row.HEDIEUHANH, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="CHIP">Chip xử lý (CPU)</label>
                    @Html.TextBoxFor(row => row.CHIP, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="TOCDOCPU">Tốc độ CPU</label>
                    @Html.TextBoxFor(row => row.TOCDOCPU, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="CHIPDOHOA">Chip đồ họa (GPU)</label>
                    @Html.TextBoxFor(row => row.CHIPDOHOA, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="RAM">Ram</label>
                    @Html.TextBoxFor(row => row.RAM, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="DUNGLUONG">Dung lượng</label>
                    @Html.TextBoxFor(row => row.DUNGLUONG, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="MANGDIDONG">Mạng di động</label>
                    @Html.TextBoxFor(row => row.MANGDIDONG, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="SIM">Sim</label>
                    @Html.TextBoxFor(row => row.SIM, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="WIFI">Wifi</label>
                    @Html.TextBoxFor(row => row.WIFI, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="CONGKETNOI">Cổng kết nối</label>
                    @Html.TextBoxFor(row => row.CONGKETNOI, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="DUNGLUONGPIN">Dung lượng pin</label>
                    @Html.TextBoxFor(row => row.DUNGLUONGPIN, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="LOAIPIN">Loại pin</label>
                    @Html.TextBoxFor(row => row.LOAIPIN, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="HOTROSAC">Hổ trợ sạc</label>
                    @Html.TextBoxFor(row => row.HOTROSAC, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="BAOMAT">Bảo mật</label>
                    @Html.TextBoxFor(row => row.BAOMAT, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="TINHNANGDACBIET">Tính năng đặc biệt</label>
                    @Html.TextAreaFor(row => row.TINHNANGDACBIET, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="KHANGNUOC">Kích thước màn hình</label>
                    @Html.TextBoxFor(row => row.KHANGNUOC, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="THIETKE">Thiết kế</label>
                    @Html.TextBoxFor(row => row.THIETKE, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="CHATLIEU">Chất liệu</label>
                    @Html.TextBoxFor(row => row.CHATLIEU, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="KICHTHUOC">Kích thước</label>
                    @Html.TextBoxFor(row => row.KICHTHUOC, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="BAOHANH">Bảo hành</label>
                    @Html.TextBoxFor(row => row.BAOHANH, new { @class = "form-control", type = "number" })
                </div>
                <div class="form-group">
                    <label for="RAMAT">Ra mắt</label>
                    @Html.TextBoxFor(row => row.RAMAT, new { @class = "form-control", type = "date" })
                </div>

                <div class="form-group">
                    <a href="@Url.Action("Admin_Product", "Admin", new { MaLoaiSP = 1 })" class="btn btn-danger">Trở lại</a>
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
}
<script>
    function kiemTraDuLieu() {
        // Lấy giá trị từ các trường nhập liệu
        var maSP = document.getElementById("MaSP").value;
        var kichThuocManHinh = document.getElementById("KICHTHUOCMANHINH").value;
        var congNgheManHinh = document.getElementById("CONGNGHEMANHINH").value;
        var doPhanGiai = document.getElementById("DOPHANGIAI").value;
        var tinhNangManHinh = document.getElementById("TINHNANGMANGHINH").value;
        var tanSoQuet = document.getElementById("TANSOQUET").value;
        var cameraSau = document.getElementById("CAMERASAU").value;
        var quayPhim = document.getElementById("QUAYPHIM").value;
        var cameraTruoc = document.getElementById("CAMERATRUOC").value;
        var tinhNangCamera = document.getElementById("TINHNANGCAMERA").value;
        var heDieuHanh = document.getElementById("HEDIEUHANH").value;
        var chip = document.getElementById("CHIP").value;
        var tocDoCPU = document.getElementById("TOCDOCPU").value;
        var chipDoHoa = document.getElementById("CHIPDOHOA").value;
        var ram = document.getElementById("RAM").value;
        var dungLuong = document.getElementById("DUNGLUONG").value;
        var mangDiDong = document.getElementById("MANGDIDONG").value;
        var sim = document.getElementById("SIM").value;
        var wifi = document.getElementById("WIFI").value;
        var congKetNoi = document.getElementById("CONGKETNOI").value;
        var dungLuongPin = document.getElementById("DUNGLUONGPIN").value;
        var loaiPin = document.getElementById("LOAIPIN").value;
        var hoTroSac = document.getElementById("HOTROSAC").value;
        var baoMat = document.getElementById("BAOMAT").value;
        var tinhNangDacBiet = document.getElementById("TINHNANGDACBIET").value;
        var khangNuoc = document.getElementById("KHANGNUOC").value;
        var thietKe = document.getElementById("THIETKE").value;
        var chatLieu = document.getElementById("CHATLIEU").value;
        var kichThuoc = document.getElementById("KICHTHUOC").value;
        var baoHanh = document.getElementById("BAOHANH").value;
        var raMat = document.getElementById("RAMAT").value;

        // Kiểm tra xem có trường nào để trống không
        if (maSP === "" || kichThuocManHinh === "" || congNgheManHinh === "" || doPhanGiai === "" ||
            tinhNangManHinh === "" || tanSoQuet === "" || cameraSau === "" || quayPhim === "" ||
            cameraTruoc === "" || tinhNangCamera === "" || heDieuHanh === "" || chip === "" ||
            tocDoCPU === "" || chipDoHoa === "" || ram === "" || dungLuong === "" || mangDiDong === "" ||
            sim === "" || wifi === "" || congKetNoi === "" || dungLuongPin === "" || loaiPin === "" ||
            hoTroSac === "" || baoMat === "" || tinhNangDacBiet === "" || khangNuoc === "" ||
            thietKe === "" || chatLieu === "" || kichThuoc === "" || baoHanh === "" || raMat === "") {
            alert("Vui lòng điền đầy đủ thông tin.");
            return false; // Ngăn chặn việc gửi biểu mẫu nếu có trường để trống
        }
        return true; // Cho phép gửi biểu mẫu nếu tất cả các trường đã được điền đầy đủ
    }
    // Khi biểu mẫu được gửi, kiểm tra dữ liệu trước khi gửi.
    document.getElementById("myForm").onsubmit = function () {
        return kiemTraDuLieu();
    };
</script>
