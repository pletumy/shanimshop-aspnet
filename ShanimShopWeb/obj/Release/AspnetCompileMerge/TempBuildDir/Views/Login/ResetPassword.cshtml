@{
    ViewBag.Title = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<style>
    .btn-block {
        margin-top: 20px;
        padding: 10px;
        border: none;
        background-color: #08347c;
        color: #fff;
        font-weight: bold;
        width: 100%;
    }

        .btn-block:hover, .btn-block:focus, .btn-block:focus:active {
            outline: none;
            background-color: #FF5722;
            color: #fff;
        }

        .btn-block:focus-visible {
            outline: none;
        }

    .validation-summary-errors li {
        list-style-type: none;
        color: red;
    }
</style>

<div class="ads-grid">
    <div class="container">
        <div class="product-sec1">
            <div style="display: flex; justify-content: center;">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h2 style="margin-bottom: 50px" class="card-title text-center">Nhập mã xác nhận</h2>

                            @using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <p style="color: #000">Mã xác nhận đã được gửi đến email:</p>
                                @Html.TextBox("email", null, new { @value = ViewBag.Email, @class = "form-control", @id = "email", @type = "text", @readonly = "readonly", placeholder = "Email", @style = "background: #fff" })
                                <p style="color: #000">Vui lòng nhập mã tại đây:</p>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.TextBox("token", null, new { @id = "token", @style = "margin: 10px 0 0", @class = "form-control", @placeholder = "Nhập mã", @required = "required" })
                                    </div>
                                </div>
                                <div class="new-signup">
                                    <a href="@Url.Action("ResendTheCode", "Login", new {email = ViewBag.Email})" class="signuplink">Gửi lại mã xác nhận</a>
                                </div>
                                <p id="message" style="font-size: 14px; font-weight: bold; color: red; text-align: left;">@ViewBag.Wrong</p>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-block">Xác nhận</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>