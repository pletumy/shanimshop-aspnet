        border-collapse: collapse;
        margin-top: 20px;
    }

    table, th, td {
        border: 1px solid #ddd;
    }

    th, td {
        padding: 10px;
        text-align: left;
    }

    th {
        width: 110px;
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
